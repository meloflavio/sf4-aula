{% extends 'base.html.twig' %}

{% block title %}Lista de Contatos{% endblock %}

{% block body %}
    <h1>Lista de Contatos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Mensagem</th>
                <th>Endereço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for contato in contatos %}
            <tr>
                <td>{{ contato.id }}</td>
                <td>{{ contato.nome }}</td>
                <td>{{ contato.email }}</td>
                <td>{{ contato.mensagem }}</td>
                <td>{{ contato.endereco }}</td>
                <td>
                    <a href="{{ path('contato_show', {'id': contato.id}) }}" class="btn btn-secondary"><i class="fas fa-eye"></i>Ver</a>
                    <a href="{{ path('contato_edit', {'id': contato.id}) }}"  class="btn btn-success"><i class="fas fa-edit"></i>Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Sem registros no momento</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contato_new') }}" class="btn btn-primary">Adicionar novo</a>
{% endblock %}
